@using MyFinances.Models

<section class="w-100 p-4 pb-4">
    <label for="percentageRangeCOI" class="form-label">Dodatkowa marża do oprocentowania</label>
    <div class="range">
        <input type="range" class="form-range" min="0" max="3" step="0.05" id="percentageRangeCOI" @bind="model.COIAdditionalPercentage" @bind:event="oninput" />
    </div>

    <div class="form-group" style="width:25%">
        <div class="input-group"><input disabled="@true" @bind="model.COIAdditionalPercentage" max="3" min="0" @bind:event="oninput" class="form-control"><div class="input-group-append"><span class="input-group-text">%</span></div></div>
    </div>
</section>

<div class="form-group">
	<label>Stałe oprocentowanie w 1 okresie</label>
	<div class="input-group"><input @bind="model.COIPercentage[0]" class="form-control"><div class="input-group-append"><span class="input-group-text">%</span></div></div>
</div>
<div class="form-group">
	<label>Oprocentowanie w 2 roku (Odczyt inflacji)</label>
	<div class="input-group"><input @bind="model.COIPercentage[1]" class="form-control"><div class="input-group-append"><span class="input-group-text">%</span></div></div>
</div>
<div class="form-group">
	<label>Oprocentowanie w 3 roku (Odczyt inflacji)</label>
	<div class="input-group"><input @bind="model.COIPercentage[2]" class="form-control"><div class="input-group-append"><span class="input-group-text">%</span></div></div>
</div>
<div class="form-group">
	<label>Oprocentowanie w 4 roku (Odczyt inflacji)</label>
	<div class="input-group"><input @bind="model.COIPercentage[3]" class="form-control"><div class="input-group-append"><span class="input-group-text">%</span></div></div>
</div>

@code {
	[Parameter]
	public DebentureModel model { get; set; }
}
